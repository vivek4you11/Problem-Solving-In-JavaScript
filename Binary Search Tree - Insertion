class Node {
  constructor(value) {
    this.value = value;
    this.left = null;
    this.right = null;
  }
}

class BST {
  constructor(value) {
    this.root = new Node(value);
    this.count = 1;
  }

  insertValue(value) {
    let newNode = new Node(value);
    this.count++;

    const searchTree = (node) => {
      if (value < node.value) {
        if (!node.left) {
          node.left = newNode;
        } else {
          searchTree(node.left);
        }
      } else if (value > node.value) {
        if (!node.right) {
          node.right = newNode;
        } else {
          searchTree(node.right);
        }
      }
    };
    searchTree(this.root);
  }
}

const bst = new BST(15);
bst.insertValue(12);
bst.insertValue(14);
bst.insertValue(18);
bst.insertValue(21);
console.log(bst);
